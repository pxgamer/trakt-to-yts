{
    "name": "pxgamer/trakt-to-yts",
    "type": "library",
    "description": "A CLI for downloading Trakt lists from YTS",
    "license": "MIT",
    "bin": "trakt-to-yts",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.5",
        "laravel-zero/framework": "^9.1"
    },
    "require-dev": {
        "mockery/mockery": "^1.5",
        "pestphp/pest": "^1.22"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test:unit": "pest --ansi",
        "test": [
            "@test:unit"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
